{
  "name": "@arenahito/piggychick",
  "version": "0.2.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arenahito/piggychick.git"
  },
  "bin": {
    "pgch": "bin/pgch.js"
  },
  "files": [
    "dist",
    "bin",
    "src/cli.ts",
    "src/shared",
    "src/server"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "concurrently \"bun --watch src/server/index.ts\" \"bun run dev:client\"",
    "dev:client": "mkdir -p dist dist/assets && cp src/client/index.html dist/index.html && cp node_modules/github-markdown-css/github-markdown.css dist/markdown.css && bun build --watch src/client/main.ts --outdir dist/assets --target browser",
    "start": "bun src/server/index.ts",
    "build": "bun run build:client",
    "build:client": "mkdir -p dist dist/assets && bun build src/client/main.ts --outdir dist/assets --target browser && cp src/client/index.html dist/index.html && cp node_modules/github-markdown-css/github-markdown.css dist/markdown.css",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint . --ignore-path .oxlintignore",
    "typecheck": "tsgo --project tsconfig.json",
    "test": "bun test",
    "prepare": "bun run build"
  },
  "dependencies": {
    "d3-transition": "^3.0.1",
    "dompurify": "^3.3.1",
    "github-markdown-css": "^5.8.1",
    "markdown-it": "^14.1.0",
    "markdown-it-task-lists": "^2.1.1",
    "mermaid": "^11.12.2",
    "open": "^11.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.1.0",
    "@typescript/native-preview": "^7.0.0-dev.20260130.1",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "typescript": "^5.9.3"
  }
}
